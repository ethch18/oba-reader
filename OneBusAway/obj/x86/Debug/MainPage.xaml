<Page
    x:Class="OneBusAway.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Page.Resources>
        <Flyout x:Key="FlyoutBase1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="280"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:ConnectionId='5' x:Name="textBox"                           ToolTipService.ToolTip="Add a stop"/>
                <Button x:ConnectionId='6' x:Name="buttonAdd"                          Width="40" Height="40" ToolTipService.ToolTip="Add" Grid.Column="1"/>
                <Button x:ConnectionId='7' x:Name="buttonAddRandom"                                Width="40" Height="40" ToolTipService.ToolTip="Add random stop" Grid.Column="2"/>
                <Button x:ConnectionId='8' x:Name="buttonAddPreset" Width="40" Height="40" ToolTipService.ToolTip="Use preset stops" Grid.Column="3" Flyout="{StaticResource FlyoutBase2}"/>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="4">
                    <ProgressBar x:ConnectionId='9' x:Name="progressBar" IsIndeterminate="True" Visibility="Collapsed"/>
                    <RichTextBlock x:ConnectionId='10' x:Name="richTextBox" Grid.Row="1" TextWrapping="NoWrap" Margin="5"/>
                    <Button x:ConnectionId='11' x:Name="buttonClear" Content="Clear all stops"                            Grid.Row="2"/>

                    <TextBlock Text=""/>

                    <TextBlock Text="Text options"/>
                    <RadioButton x:ConnectionId='12' x:Name="radioL1" Content="Default" GroupName="caps"/>
                    <RadioButton x:ConnectionId='13' x:Name="radioL2" Content="lowercase" GroupName="caps"/>
                    <RadioButton x:ConnectionId='14' x:Name="radioL3" Content="ALL CAPS" GroupName="caps"/>

                    <TextBlock Text=""/>
                    
                    <TextBlock Text="Maximum arrivals to show"/>
                    <Slider x:ConnectionId='15' x:Name="slider" Minimum="1"                                    Value="8" />

                    <TextBlock Text=""/>
                    
                    <TextBlock Text="Language"/>
                    <CheckBox x:ConnectionId='16' x:Name="checkEnglish" Content="English"                                                      />
                    <CheckBox x:ConnectionId='17' x:Name="checkChinese" Content="繁體中文 (beta)"                                                      />

                    <TextBlock Text=""/>
                    
                    <ToggleSwitch x:ConnectionId='18' x:Name="toggleSeconds" Header="Show seconds" IsOn="True"/>

                    <TextBlock x:ConnectionId='19' x:Name="errorText" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Flyout>
        <Flyout x:Key="FlyoutBase2">
            <StackPanel >
                <TextBlock Text="Presets"/>
                <Button x:ConnectionId='1' x:Name="buttonPreset1"                                 Content="Aurora Village Transit Center" Background="#00000000" Width="300" HorizontalContentAlignment="Left"/>
                <Button x:ConnectionId='2' x:Name="buttonPreset2"                                 Content="Seattle Pacific University" Background="#00000000" Width="300" HorizontalContentAlignment="Left"/>
                <Button x:ConnectionId='3' x:Name="buttonPreset3"                                 Content="University of Washington" Background="#00000000" Width="300" HorizontalContentAlignment="Left"/>
                <Button x:ConnectionId='4' x:Name="buttonPreset4"                                 Content="Westlake" Background="#00000000" Width="300" HorizontalContentAlignment="Left"/>
            </StackPanel>
        </Flyout>
    </Page.Resources>

    <Grid x:ConnectionId='20' x:Name="gridMain" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <CommandBar Background="#00000000" Grid.ColumnSpan="3" HorizontalAlignment="Right">
            <AppBarButton x:ConnectionId='21'                              Icon="Refresh" Label="Refresh"/>
            <AppBarButton Icon="Setting" Label="Settings" Flyout="{StaticResource FlyoutBase1}"/>
        </CommandBar>
    </Grid>
</Page>

